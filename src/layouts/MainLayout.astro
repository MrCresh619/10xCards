---
import "../styles/global.css";
import { Toaster } from "sonner";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | 10xCards</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <div class="relative flex min-h-screen flex-col">
      <header
        class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
      >
        <div class="container flex h-14 items-center">
          <a href="/" class="mr-6 flex items-center space-x-2">
            <span class="font-bold">10xCards</span>
          </a>
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a href="/generate" class="transition-colors hover:text-foreground/80">Generator</a>
            <a href="/flashcards" class="transition-colors hover:text-foreground/80">Moje fiszki</a>
          </nav>
        </div>
      </header>
      <slot />
    </div>
    <Toaster richColors closeButton position="top-right" client:load />
  </body>
</html>
